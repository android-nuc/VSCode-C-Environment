{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "(GCC) Compile C++",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "\"${file}\"",
                "-fexec-charset=GBK",
                "-o",
                "\"${workspaceFolder}\\build\\${fileBasenameNoExtension}\""
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": false,
                "echo": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(error|warning|note):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "(GCC) Compile C",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "\"${file}\"",
                "-fexec-charset=GBK",
                "-o",
                "\"${workspaceFolder}\\build\\${fileBasenameNoExtension}\""
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": false,
                "echo": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "(.*):(\\d+):(\\d+):\\s+(error|warning|note):\\s+(.*)",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "(Clang) Compile C++",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-g",
                "\"${file}\"",
                "-Wall",
                "-fcolor-diagnostics",
                "--target=x86_64-w64-mingw",
                "-o",
                "\"${workspaceFolder}\\build\\${fileBasenameNoExtension}\""
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": false,
                "echo": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": "absolute",
                "base": "$gcc"
            }
        },
        {
            "label": "(MSVC) Compile C++",
            "type": "shell",
            "command": "${fileDirname}\\.vscode\\compileMSVC.bat",
            "args": [
                "\"${file}\"",
                "\"${workspaceFolder}\\build\\${fileBasename}\"",
                "\"${workspaceFolder}\\build\""
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": false,
                "echo": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        }
    ]
}